<h1>Edit User</h1>
<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>

    <%= render 'layouts/fields', :f => f %>
    <div>
      <%= image_tag @user.avatar.url(:medium)%>
      <!--<a href="http://gravatar.com/emails" target=_blank>Change</a>-->
    </div>
    <div class="actions">
      <%= f.submit  "Update" %>
    </div>

<% end %>


