<div class="center">
<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>

<div class="">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>
    <div class="">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="">
      <%= f.submit "Sign in", :class => "btn btn-default btn-lg" %>
    </div>

<% end %>
<p align="center" >New User? <%= link_to "Sign up now!", signup_path %></p>
</div>